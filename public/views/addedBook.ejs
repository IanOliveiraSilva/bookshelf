<%- include('partials/header', {pageTitle: 'Virtual Library' }) %>

<link rel="stylesheet" href="../css/book.css">

<main>
    <% if (bookData) { %>
        <div class="container py-5">
            <div class="row g-0 align-items-center margin-top">
                <div class="col-md-4">
                    <img width="132" height="196" id="book-image" src="<%= bookData.image %>" alt="Capa do Livro" class="poster">
                    <h3 id="book-title" class="card-title"><%= bookData.name %></h3>
                    <p id="book-date" class="text-muted inline"><%= new Date(bookData.year).toLocaleDateString('pt-BR') %></p>

                    <p id="book-author" class="card-text"><%= bookData.author %></p>
                </div>
                <div class="col-md-8">
                    <p id="book-description"><%= bookData.description %></p>
                    <div id="castList" class="">
                        <h3><span id="book-publisher" class="character align-items-center text-sluglist">â€ƒ<%= bookData.publisher %></span></h3>
                    </div>
                    <a href="/" class="back-link text-center">
                        <i class="fa-solid fa-house" style="color: #ffffff; font-size: 30px;"></i>
                    </a>
                </div>
            </div>
        </div>
    <% } %>
</main>

<script src="../js/addBook.js"></script>
